***INITILIZE A VARIABLES******
  package printing;

   class ini{
	   String add(int a,int b) {
		   int c=a+b;
		   return "Sum of a and b is:"+c;
	   }
   }
public class Initialize {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		ini initialize=new ini();
		String sum=initialize.add(15,67);
        System.out.println(sum);
	}

}

///////////////////////////////////////////////////////////
*****MULTIPLYING 3 VALUES*****
  package printing;

   class ini{
	   String mul(int a,int b,int c) {
		   int multiple=a*b*c;
		   return "multiplying a & b & c is:"+multiple;
	   }
   }
public class Initialize {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		ini initialize=new ini();
		String sum=initialize.mul(15,67,5);
        System.out.println(sum);
	}

}
