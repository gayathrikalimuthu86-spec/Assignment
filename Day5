*****STUDENT DETAILS*******
  package printing;

class Student2{
	String Name;
	int rollno,age;
	String course;
	void behaviour()
	{
	System.out.println("Behaviour:Good");	
	}
	void Grade() {
		System.out.println("Grade:Excellent with O Grade");		
	}
	void skills()
	{
		System.out.println("Skill:Good leadership quality");	
	}
}

public class Studentdetail{
	public static void main(String[] args)
	{
	Student2 stud=new Student2();
	stud.Name="Gayathri";
	stud.rollno=2301;
	stud.age=21;
	stud.course="Software Testing";
	System.out.println("Student Name:"+stud.Name);
	System.out.println("Roll No:"+stud.rollno);
	System.out.println("Age:"+stud.age);
	System.out.println("Course:"+stud.course);
	stud.Grade();
	stud.behaviour();
	stud.skills();
	
	}
	
}
